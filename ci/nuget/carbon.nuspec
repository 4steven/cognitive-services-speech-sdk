  <files>
    <!-- target and property files -->
    <file src="build\native\Microsoft.CognitiveServices.Speech.targets" target="build\native\Microsoft.CognitiveServices.Speech.targets" />
    <file src="build\net45\Microsoft.CognitiveServices.Speech.targets" target="build\net45\Microsoft.CognitiveServices.Speech.targets" />
    <file src="build\Microsoft.CognitiveServices.Speech.props" target="build\Microsoft.CognitiveServices.Speech.props" />

    <!-- C++ header files -->
    <file src="$DropDir$\Win32\Release\public\include\cxx_api\*" target="build\native\include\cxx_api\" />

    <!-- C header files -->
    <file src="$DropDir$\Win32\Release\public\include\c_api\*" target="build\native\include\c_api\" />

    <!-- native dll and lib files -->
    <file src="$DropDir$\Win32\Debug\public\lib\carbon.lib" target="build\native\Win32\Debug\carbon.lib" />
    <file src="$DropDir$\Win32\Debug\public\lib\carbon.dll" target="build\native\Win32\Debug\carbon.dll" />
    <file src="$DropDir$\Win32\Release\public\lib\carbon.lib" target="build\native\Win32\Release\carbon.lib" />
    <file src="$DropDir$\Win32\Release\public\lib\carbon.dll" target="build\native\Win32\Release\carbon.dll" />

    <file src="$DropDir$\x64\Debug\public\lib\carbon.lib" target="build\native\x64\Debug\carbon.lib" />
    <file src="$DropDir$\x64\Debug\public\lib\carbon.dll" target="build\native\x64\Debug\carbon.dll" />
    <file src="$DropDir$\x64\Release\public\lib\carbon.lib" target="build\native\x64\Release\carbon.lib" />
    <file src="$DropDir$\x64\Release\public\lib\carbon.dll" target="build\native\x64\Release\carbon.dll" />

    <!-- .NET dlls -->
    <!-- The carbon_csharp_lib.dll needs to be changed to an AnyCPU assembly using corflags -->
    <file src="$DropDir$\Win32\Release\public\lib\carbon_csharp_lib.dll" target="lib\net45\carbon_csharp_lib.dll" />
    <file src="$DropDir$\Win32\Debug\public\lib\carbon_csharp_bindings.dll" target="build\native\Win32\Debug\carbon_csharp_bindings.dll" />
    <file src="$DropDir$\Win32\Release\public\lib\carbon_csharp_bindings.dll" target="build\native\Win32\Release\carbon_csharp_bindings.dll" />
    <file src="$DropDir$\x64\Debug\public\lib\carbon_csharp_bindings.dll" target="build\native\x64\Debug\carbon_csharp_bindings.dll" />
    <file src="$DropDir$\x64\Release\public\lib\carbon_csharp_bindings.dll" target="build\native\x64\Release\carbon_csharp_bindings.dll" />

  </files>
